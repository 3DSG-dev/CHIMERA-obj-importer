<nym:BordlessWindow x:Class="Chimera_Importer.SelectDB.SelectDBWindow"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
                    xmlns:s="clr-namespace:System;assembly=mscorlib"
                    xmlns:nym="clr-namespace:ITinnovationsLibrary;assembly=ITinnovationsLibrary"
                    Title="Chimera Select DB"
                    Width="300" Height="145" x:ClassModifier="internal" Initialized="BordlessWindow_Initialized"
                    Closing="BordlessWindow_Closing" ResizeMode="NoResize">
    <Grid Background="White">
        <TextBlock x:Name="AskText" Height="22" Margin="10,10,10,0" VerticalAlignment="Top"
                   Text="Select the database you want to use:" />
        <ComboBox x:Name="ResponseCombo" Height="24" Margin="10,37,10,0" VerticalAlignment="Top"
                  SelectedValuePath="Tag" />
        <Button x:Name="OKButton" Width="60" Margin="0,72,80,0" HorizontalAlignment="Right" VerticalAlignment="Top"
                Content="OK"
                Click="OKButton_Click" IsDefault="True" />
        <Button x:Name="CancelButton" Width="60" Margin="0,72,10,0" HorizontalAlignment="Right" VerticalAlignment="Top"
                Content="Cancel"
                IsCancel="True" Click="CancelButton_Click" />
    </Grid>
</nym:BordlessWindow>